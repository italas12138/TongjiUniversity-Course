{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "task g++",
        "type": "shell",
        "command": "C:\\MinGW\\bin\\g++",
        "args": [
          "-g",
          "*.cpp",
          "-o",
          "main"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "presentation": {
          "reveal": "always",
          "panel": "new"
        },
        "problemMatcher": {
          "owner": "cpp",
          "fileLocation": [
            "relative",
            "${workspaceFolder}"
          ],
          "pattern": {
            "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning error):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
          }
        }
      }
    ]
  }
  